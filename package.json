{
  "name": "superapp",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "check:ultracite": "ultracite check",
    "check:error": "ultracite check --diagnostic-level error",
    "check:warn": "ultracite check --diagnostic-level warn",
    "fix:ultracite": "ultracite fix",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.3",
    "typescript": "^5",
    "ultracite": "6.5.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix",
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.3"
}
